              <a  style="float: left;" class="nav-item nav-link active" href="/hospitals/caseHistory">CASE HISTORY</a>
            <%}if(users.level!==4){%>
            <a  style="float: left;" class="nav-item nav-link active" href="/hospitals/vaccineHistory">VACCINE HISTORY</a>
