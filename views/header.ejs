              <a  style="float: left;" class="nav-item nav-link active" href="/hospitals/distributionStatus">DISTRIBUTION STATUS</a>
              <a  style="float: left;" class="nav-item nav-link active" href="/hospitals/distributionStatusHistory">DISTRIBUTION HISTORY</a>
            <%}%>  
            <a style="position:absolute; right: 10px;"  class="nav-item nav-link active " href="/users/logout">LOGOUT</a>
        <%} %>
      </div>
    </div>
  </nav>
</header>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
$(document).ready(function() {
            $(".menu-icon").on("click", function() {
                  $("nav ul").toggleClass("showing");
            });
      });

      // Scrolling Effect

      $(window).on("scroll", function() {
            if($(window).scrollTop()) {
                  $('nav').addClass('black');
            }

            else {
                  $('nav').removeClass('black');
            }
      })
</script>